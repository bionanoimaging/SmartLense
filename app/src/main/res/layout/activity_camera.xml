<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_existed"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_dark"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">

        <Button
            android:id="@+id/colorpicker"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/background"
            android:backgroundTint="#000000"
            android:foreground="@drawable/colorpicker"
            android:textOff="@string/camera_firsttouch"
            android:textOn="@string/camera_firsttouch" />

        <Button
            android:id="@+id/empty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black" />

        <ToggleButton
            android:id="@+id/matrixtogglebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/matrix"
            android:textOff="@string/camera_firsttouch"
            android:textOn="@string/camera_firsttouch" />

        <Button
            android:id="@+id/emptybutton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black" />

        <Button
            android:id="@+id/capture"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@android:drawable/checkbox_off_background"
            android:backgroundTint="#FFFFFF" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>
